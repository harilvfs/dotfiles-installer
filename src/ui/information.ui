<?xml version='1.0' encoding='UTF-8'?>
<interface>
  <template class="Information" parent="GtkBox">
    <property name="orientation">1</property>
    <property name="margin-end">100</property>
    <property name="margin-start">100</property>
    <property name="spacing">10</property>
    <child>
      <object class="GtkLabel">
        <property name="label">Information</property>
        <style>
          <class name="title-1"/>
        </style>
      </object>
    </child>
    <child>
      <object class="AdwPreferencesGroup">
        <property name="title" translatable="yes">General</property>
        <child>
          <object class="AdwActionRow" id="config_name">
            <style>
              <class name="property"/>
            </style>
            <property name="title" translatable="yes">Name</property>
          </object>
        </child>

        <child>
          <object class="AdwActionRow" id="config_id">
            <style>
              <class name="property"/>
            </style>
            <property name="title" translatable="yes">ID</property>
          </object>
        </child>

        <child>
          <object class="AdwActionRow" id="config_version">
            <style>
              <class name="property"/>
            </style>
            <property name="title" translatable="yes">Version</property>
          </object>
        </child>

        <child>
          <object class="AdwActionRow" id="config_description">
            <style>
              <class name="property"/>
            </style>
            <property name="title" translatable="yes">Description</property>
          </object>
        </child>

        <child>
          <object class="AdwActionRow" id="config_author">
            <style>
              <class name="property"/>
            </style>
            <property name="title" translatable="yes">Author</property>
          </object>
        </child>

        <child>
          <object class="AdwActionRow" id="config_homepage">
            <style>
              <class name="property"/>
            </style>
            <property name="title" translatable="yes">Homepage</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="AdwPreferencesGroup">
        <property name="title" translatable="yes">Source</property>
        <child>
          <object class="AdwActionRow" id="config_source">
            <style>
              <class name="property"/>
            </style>
            <property name="title" translatable="yes">Source</property>
          </object>
        </child>

        <child>
          <object class="AdwActionRow" id="config_subfolder">
            <style>
              <class name="property"/>
            </style>
            <property name="title" translatable="yes">Subfolder</property>
          </object>
        </child>
      </object>
    </child>

    <child>
      <object class="AdwPreferencesGroup" id="open_dotfiles_content">
        <property name="title" translatable="yes">Content</property>
        <property name="visible">false</property>
        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Open Dotfiles</property>
            <property name="activatable-widget">btn_show_dotfiles</property>
            <child type="suffix">
              <object class="GtkButton" id="btn_show_dotfiles">
                <property name="halign">3</property>
                <property name="valign">3</property>
                <property name="label" translatable="yes">Show Dotfiles</property>
                <property name="action-name">app.showdotfiles</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>

  </template>
</interface>
