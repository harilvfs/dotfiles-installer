<?xml version='1.0' encoding='UTF-8'?>
<interface>
  <template class="Information" parent="GtkBox">
    <property name="orientation">1</property>
    <property name="margin-end">20</property>
    <property name="margin-start">20</property>
    <property name="spacing">10</property>
    <child>
      <object class="GtkLabel">
        <property name="label">Information</property>
        <style>
          <class name="title-1"/>
        </style>
      </object>
    </child>

    <!-- Description -->
    <child>
      <object class="GtkLabel">
        <property name="label">Install custom dotfiles and configurations easily on your system. configurations easily on your system.</property>
        <property name="margin-bottom">2</property>
        <property name="justify">2</property>
        <property name="wrap">1</property>
      </object>
    </child>

    <child>
      <object class="AdwPreferencesGroup">
        <child>
          <object class="AdwActionRow" id="config_name">
            <style>
              <class name="property"/>
            </style>
            <property name="title" translatable="yes">Name</property>
          </object>
        </child>

        <child>
          <object class="AdwActionRow" id="config_id">
            <style>
              <class name="property"/>
            </style>
            <property name="title" translatable="yes">ID</property>
          </object>
        </child>

        <child>
          <object class="AdwActionRow" id="config_version">
            <style>
              <class name="property"/>
            </style>
            <property name="title" translatable="yes">Version</property>
          </object>
        </child>

        <child>
          <object class="AdwActionRow" id="config_description">
            <style>
              <class name="property"/>
            </style>
            <property name="title" translatable="yes">Description</property>
          </object>
        </child>

        <child>
          <object class="AdwActionRow" id="config_author">
            <style>
              <class name="property"/>
            </style>
            <property name="title" translatable="yes">Author</property>
          </object>
        </child>

        <child>
          <object class="AdwActionRow" id="config_homepage">
            <style>
              <class name="property"/>
            </style>
            <property name="title" translatable="yes">Homepage</property>
            <property name="activatable-widget">btn_open_homepage</property>
            <child type="suffix">
              <object class="GtkButton" id="btn_open_homepage">
                <property name="halign">3</property>
                <property name="valign">3</property>
                <property name="label" translatable="yes">Open</property>
                <property name="action-name">app.openhomepage</property>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="AdwActionRow" id="config_dependencies">
            <style>
              <class name="property"/>
            </style>
            <property name="title" translatable="yes">Dependencies</property>
            <property name="activatable-widget">btn_open_dependencies</property>
            <child type="suffix">
              <object class="GtkButton" id="btn_open_dependencies">
                <property name="halign">3</property>
                <property name="valign">3</property>
                <property name="label" translatable="yes">Open</property>
                <property name="action-name">app.opendependencies</property>
              </object>
            </child>
          </object>
        </child>

      </object>
    </child>
    <child>
      <object class="AdwPreferencesGroup">
        <property name="title" translatable="yes">Dotfiles</property>
        <child>
          <object class="AdwActionRow" id="config_source">
            <style>
              <class name="property"/>
            </style>
            <property name="title" translatable="yes">Source</property>
          </object>
        </child>

        <child>
          <object class="AdwActionRow" id="config_subfolder">
            <style>
              <class name="property"/>
            </style>
            <property name="title" translatable="yes">Subfolder</property>
          </object>
        </child>

        <child>
          <object class="AdwButtonRow" id="open_dotfiles_content">
            <property name="title" translatable="yes">Open Download Folder</property>
            <property name="visible">false</property>
            <property name="action-name">app.showdotfiles</property>
          </object>
        </child>

      </object>
    </child>

  </template>
</interface>
